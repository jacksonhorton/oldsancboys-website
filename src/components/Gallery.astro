---
import "../styles/tailwind.css";
import { Image } from "astro:assets";

// images
import camp24Image from "../images/carousel/camp24.jpg";
import fofClinton1Image from "../images/carousel/fof-clinton1.jpg";
import fofClinton2Image from "../images/carousel/fof-clinton2.jpg";
import fofClinton3Image from "../images/carousel/fof-clinton3.jpg";
import fofClinton4Image from "../images/carousel/fof-clinton4.jpg";
import thriveCoverImage from "../images/Thrive.jpg";
---

<div class="flex flex-col space-y-6 md:space-y-10 lg:space-y-14 w-screen md:w-3/4 lg:w-1/2 m-auto max-w-none lg:max-w-4xl">
    <div class="flex flex-row justify-center">
        <!-- class="max-h-svh w-auto max-w-sm md:max-w-2xl lg:max-w-4xl mx-auto" -->
        <Image
            class="shadow-xl w-9/12"
            src={fofClinton2Image}
            width={fofClinton2Image.width}
            height={fofClinton2Image.height}
            alt=""
            loading="lazy"
        />
        <div class="block w-1/6 h-auto"></div>
    </div>
    <div class="flex flex-row justify-center space-x-8 md:space-x-12 items-center">
        <a href="music" class="w-4/12 h-4/12 md:w-3/12 md:h-3/12 self-end -mb-6">
            <Image
                class="rounded-lg shadow-xl"
                src={thriveCoverImage}
                width={thriveCoverImage.width}
                height={thriveCoverImage.height}
                alt="Thrive cover logo."
                loading="lazy"
            />
        </a>
        <Image
            class="shadow-xl w-5/12"
            src={fofClinton4Image}
            width={fofClinton4Image.width}
            height={fofClinton4Image.height}
            alt=""
            loading="lazy"
        />
    </div>
    <div class="flex flex-row justify-center items-start">
        <Image
            class="shadow-xl w-5/12 mt-12"
            src={camp24Image}
            width={camp24Image.width}
            height={camp24Image.height}
            alt=""
            loading="lazy"
        />
        <div class="w-1/12"></div>
        <Image
            class="shadow-xl w-4/12"
            src={fofClinton3Image}
            width={fofClinton3Image.width}
            height={fofClinton3Image.height}
            alt=""
            loading="lazy"
        />
    </div>
</div>
